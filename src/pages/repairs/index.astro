---
import "@/styles/globals.css"
import CreateButton from "@/components/common/CreateButton.astro"
import CRUDTemplate from "@/layouts/CRUDTemplate.astro"
import RootLayout from "@/layouts/RootLayout.astro"
import { TicketPlus } from "lucide-react"
import { RepairsTable } from "@/components/repairs/RepairsTable"
---

<RootLayout title="Reparaciones">
	<CRUDTemplate
		title="Reparaciones"
		description="La pantalla de manejo de reparaciones permite a los administradores gestionar y supervisar los tickets de reparaciones abiertos en el sistema."
	>
		<CreateButton transitionName="createTicket" slot="createButton" href="/repairs/add" title="Abrir ticket de reparacion">
			<TicketPlus className="w-6 h-6" />
		</CreateButton>
		<RepairsTable slot="table" client:load />
	</CRUDTemplate>
</RootLayout>
