---
import "@/styles/globals.css"
import CreateButton from "@/components/common/CreateButton.astro"
import { UserTable } from "@/components/users/UserTable"
import CRUDTemplate from "@/layouts/CRUDTemplate.astro"
import RootLayout from "@/layouts/RootLayout.astro"
import { UserPlus2 } from "lucide-react"
---

<RootLayout title="Usuarios">
	<CRUDTemplate
		title="Usuarios"
		description="La pantalla de manejo de usuarios permite a los administradores gestionar y supervisar las cuentas de los usuarios en elsistema."
	>
		<CreateButton transitionName="createUser" slot="createButton" href="/users/add" title="Crear nuevo usuario">
			<UserPlus2 className="w-6 h-6" />
		</CreateButton>
		<UserTable slot="table" client:load />
	</CRUDTemplate>
</RootLayout>
